{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { 
      "*": ["src/*", "lib/*", "node_modules/*"]
    },
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "aws-lambda"]
  },
  "include": ["src/**/*", "lib/**/*", "bin/**/*"],
  "exclude": ["node_modules", "cdk.out", "dist", "**/*.test.ts", "**/*.spec.ts"]
}